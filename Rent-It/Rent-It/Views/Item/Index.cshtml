@model List<Rent_It.Models.Item>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Items</h2>

<p>
    @Html.ActionLink("New Item", "ItemForm", null, new { @class = "btn btn-primary" })
</p>


@if (Model.Count == 0)
{
    <h3>We have no items.</h3>
}
else
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>Item</th>
            <th>Type</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.ActionLink(item.Name, "Edit", new { id = item.Id }, null)</td>
                <td>@item.ItemType.Name</td>
            </tr>
        }
    </table>

}

